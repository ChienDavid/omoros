<?xml version="1.0" ?>
<robot name="omorobot_r1" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:arg name="meshDirectory" default="$(find omoros)/r1_description/meshes/" />
  <xacro:include filename="$(find omoros)/r1_description/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find omoros)/r1_description/urdf/r1.gazebo.xacro"/>

  <link name='odom'/>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="15.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0"
               izz="0.1" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.036" rpy=" 0 0 0"/>
      <geometry>
        <box size=".22 0.08 0.003" />
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0.036" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.22 0.08 0.003"/>
      </geometry>
    </visual>
  </link>

  <link name="omorobot_r1_body">
    <visual>
      <origin xyz="0.1 0.28 0.25" rpy="3.14 0 -1.57"/>
      <geometry>
        <mesh filename="file://$(arg meshDirectory)bases/R1_body.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

  </link>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="-0.11 -0.07 0.10" rpy="-1.57 0 0"/>
      <geometry>
        <mesh filename="file://$(arg meshDirectory)wheels/wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1" />
      </inertial>
  </link>


  <link name="wheel_right_link">
    <visual>
      <origin xyz="-0.11 0.07 -0.122" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="file://$(arg meshDirectory)wheels/wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1" />
      </inertial>
  </link>

  <link name="caster_back_right_link">
    <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.040 0.02 0.020"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <link name="caster_back_left_link">
    <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.030 0.009 0.020"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <link name="imu_link"/>

  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0.0 0 3.14"/>
      <geometry>
        <mesh filename="file://$(arg meshDirectory)sensors/lds.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <link name="camera_link">
    <collision>
      <origin xyz="0.005 0.011 0.013" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.030 0.027"/>
      </geometry>
    </collision>
  </link>
<!-- Joints -->

  <joint name="odom_to_base" type="floating">
    <parent link="odom"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.29 0.10" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.29 0.10" rpy="1.57 0.0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_back_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_right_link"/>
    <origin xyz="-0.38 -0.16 0.06" rpy="-1.57 0 0"/>
  </joint>

  <joint name="caster_back_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_left_link"/>
    <origin xyz="-0.38 0.16 0.06" rpy="-1.57 0 0"/>
  </joint>

  <joint name="base_to_body">
    <origin xyz="0.015 0 0.1" rpy="0 0 0"/>
    <child link="omorobot_r1_body"/>
    <parent link="base_link"/>
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0 0.068" rpy="0 0 0"/>
  </joint>

  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.0 0 0.5" rpy="0.0 0 0.0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.073 -0.011 0.084" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
  </joint>


</robot>
